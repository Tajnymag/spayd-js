{
	"compilerOptions": {
		"target": "ES6",
		"module": "es6",
		"strict": false,
		"importHelpers": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"baseUrl": ".",
		"declaration": true,
		"declarationDir": "dist/types/"
	},
	"types": ["esnext"],
	"include": [
		"src/*"
	],
	"exclude": [
		"test",
		"dist",
		"node_modules"
	]
}
